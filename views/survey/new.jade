extends ../layout

block content
  .container
    h1.page-header Survey
    form(action='/survey', method='POST')
      .form-group
        label(for='name') Title
        input.form-control(type='text', id='name', name='name', placeholder='Survey name')
      .form-group
        label(for='content') Content
        textarea.form-control(id='content', rows='10', name='content', placeholder='content here')
    
      each question in questions
        if (question.name=='Selection')
          p
            label(for='Quename') Multiple
            input.form-control(type='text', id='textarea', placeholder='Question here', name='select1')
            .input-group
              .input-group-addon
                input(type='radio', name='select')
              input.form-control(type='text', id='textarea', name='select2')
            .input-group
              .input-group-addon
                input(type='radio', name='select')
              input.form-control(type='text', id='textarea', name='select3')
            .input-group
              .input-group-addon
                input(type='radio', name='select')
              input.form-control(type='text', id='textarea', name='select4')
            .input-group
              .input-group-addon
                input(type='radio', name='select')
              input.form-control(type='text', id='textarea', name='select5')
        else if(question.name=='OneQueText')
          p
            label(for='Quename') Question
            input.form-control(type='text', id='textarea', placeholder='Question here', name='select1')
            input.form-control(type='text', id='textOneQue', placeholder='Input here')
        else if(question.name=='Opinion')
          p
            label(for='Quename') Opinion
            input.form-control(type='text', id='textarea', placeholder='Question here', name='select1')
            textarea.form-control(id='opinion', rows='5', name='opinion', placeholder='Opinion here')
      div.form-actions
        a.btn.btn-default(href='javascript:window.history.back();') Back
        button.btn.btn-primary(type='submit') Add
    
    form.form-inline(action='/survey/new/Question1', method='POST')  
      p
        button.btn.btn-new(type='submit') Multiple
    form.form-inline(action='/survey/new/Question2', method='POST')  
      p 
        button.btn.btn-new(type='submit') Question

    form.form-inline(action='/survey/new/Question3', method='POST')  
      p 
        button.btn.btn-new(type='submit') Opinion
              
    script('text/javascript' src="/javascripts/questions.js").
